{
  "compilerOptions": {
    "noImplicitAny": true,
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "components": ["components/*"],
      "views": ["views/*"],
      "features": ["features/*"],
      "utils": ["utils/*"],
      "store": ["store.ts"],
      "@docstack/client": ["../../client/src/index.ts"],
      "@docstack/react": ["../../react/src/index.ts"],
      "@docstack/shared": ["../../shared/src"]
    }
  },
  "include": [
    "src", "webpack.config.js"
  ]
}
